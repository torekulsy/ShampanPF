@model IEnumerable<SymViewModel.Common.CompanyVM>

@{
    ViewBag.Title = "Index";
}

<p style="font-size: large; color: #007bff;">
    @Html.ActionLink("Create New", "Create")
</p>

<style>
    table.custom-table {
        width: 60%; /* Adjust table width */
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 14px;
        font-family: Arial, sans-serif;
    }

        table.custom-table th,
        table.custom-table td {
            border: 1px solid #ddd; /* Thin border */
            padding: 8px; /* Space inside cell */
            text-align: left;
        }

        table.custom-table th {
            background-color: #4CAF50; /* Green header */
            color: white;
        }

        table.custom-table tr:nth-child(even) {
            background-color: #f9f9f9; /* Zebra effect */
        }

        table.custom-table tr:hover {
            background-color: #f1f1f1; /* Hover effect */
        }

        table.custom-table a {
            color: #007bff;
            text-decoration: none;
        }

            table.custom-table a:hover {
                text-decoration: underline;
            }
</style>
<center>
    <table class="custom-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
    }

    </table>
</center>