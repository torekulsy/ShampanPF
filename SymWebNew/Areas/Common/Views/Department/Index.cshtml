@model IEnumerable<SymViewModel.Common.DepartmentVM>
@{
    ViewBag.Title = "Index";
}
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        SelectAllForDelete();
        $.datepicker.regional[""].dateFormat = 'dd/M/y';
        $.datepicker.setDefaults($.datepicker.regional['']);
        var oTable = $('#myDataTable').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/Common/Department/_index",
            "bProcessing": true,
            "aLengthMenu": tablelength(),
            "bJqueryUI": true,
            "bAutoWidth": false,
            "aoColumns": [
                            {
                                "sName": "Id",
                                "bSearchable": false,
                                "bSortable": false,
                                "sWidth": "12%",
                                "sClass": "center",
                                "fnRender": function (oObj) {
                                    return ' <input onclick="CheckAll(this)" type="checkbox" data-Id="' + oObj.aData[0] + '">&nbsp; <a title="Click on for Edit"  style="text-decoration:none;" id="lnkEdit1"class=" lnkEdit sym-btn-edit-row"  href=\"/Common/Department/Edit/' + oObj.aData[0] + '\"></a>' +
                                    '&nbsp; <a title="Click on for Delete" style="text-decoration:none;" data-url="/Common/Department/DepartmentDelete" onclick="deletedData(this, myDataTable,\'' + oObj.aData[0] + '\');"  class="sym-btn-remove-row"></a>';
                                }
                            }
                           
                            , { "sName": "Code", "sWidth": "20%" }
                            , { "sName": "Name", "sWidth": "25%" }
                            , { "sName": "Active", "sWidth": "15%" }
                            , { "sName": "Remarks", "sWidth": "25%" }
            ]
        });
        oTable.columnFilter({
            sPlaceHolder: "head:after",
            aoColumns: [{ type: "checkbox", "sClass": "chkAll" }
                       , { type: "text" }
                       , { type: "text" }
                       , { type: "select", values: ["Active", "Inactive"] }
                       , { type: "text" }
                       , { type: "text" }
            ]
        });
    });
</script>
<div class="headrow">
    <button type="button" title="Add New Department" data-url="/Common/Department/Create" id="" class="btnCreate sym-btn-add ">&nbsp;New</button>
    <button type="button" title="Delete Department" data-url="/Common/Department/DepartmentDelete" onclick="deletedData(this, 'myDataTable');" id="" class="sym-btn-remove">&nbsp;Delete</button>
    <button type="button" title="Add New" data-url="/Common/Department/Import" onclick="GoTo(this)" id="" class=" sym-btn-Excel-Export ">&nbsp;Export/Emport</button>
    <label class="pull-right">Department</label>
</div>
