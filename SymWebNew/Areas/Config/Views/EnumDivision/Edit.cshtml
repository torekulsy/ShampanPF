@model SymViewModel.Enum.EnumDivisionVM
@using UIHelper.MVC
@{

    ViewBag.Title = "Edit";
    ViewBag.Location = "Edit"; 
}

@using (Html.BeginForm("Edit", "EnumDivision", FormMethod.Post, new { @Id = "frmDivision" }))
{
    @Html.ValidationSummary(true)
    <div class="thinbox">
        <div class="EnumDivision">
                @Html.HiddenFor(model => model.Id)
        <div class="row">
            <label class="col-sm-3">
                @Html.LabelFor(model => model.Country_E)
            </label>
            <div class="col-sm-9">
              @Html.SimpleDropDownFor(model => model.Country_E, "/Config/DropDown/Country", new { @class = "required form-control" })
              
            </div>
        </div>
        <div class="row">
            <label class="col-sm-3">
                @Html.LabelFor(model => model.Name)
            </label>
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.Name, new { @placeholder = "Division Name", @class = "required form-control" })
              
            </div>
        </div>
            <div class="row">
                    <label class="col-sm-3">
                         @Html.LabelFor(model => model.IsActive)
                    </label>
                <div class="col-sm-1">
                @Html.CheckBoxFor(model => model.IsActive, new { @class = " form-control" })
            </div> 
        </div>
        <div class="row">
            <label class="col-sm-3">
                @Html.LabelFor(model => model.Remarks)
            </label>
            <div class="col-sm-9">
                @Html.TextAreaFor(model => model.Remarks, new { @placeholder = "Remarks",@rows="1", @class = "  form-control" })
                        @Html.ValidationMessageFor(model => model.Remarks)
            </div>
        </div>
        <div class="row">
            <label class="col-sm-3">
			<button type="button" title="Edit Data" onclick="Edit();" class="Edit sym-btn-edit">&nbsp;Edit</button>
              <button type="button" title="Save Data" onclick="pageSubmit('frmDivision');" class="Save sym-btn-save">&nbsp;Save</button>
            </label>
            <label class="col-sm-4">
				 <button type="button" title="Cancel Data" class=" btncancel sym-btn-cancel">&nbsp;Cancel</button>
            </label>
        </div>
        </div>
    </div>
}
 
<script>
    $(function () {
        Edit();
        InitDropDowns();
        valiDation("frmDivision");
    });
    function Edit() {
        fnReadOnly("EnumDivision");
        if ($(".EnumDivision").hasClass("readOnly")) {
            $(".Save").hide();
            $(".Edit").show();
        }
        else {
            $(".Save").show();
            $(".Edit").hide();
        }
    }
</script>