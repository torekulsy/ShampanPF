@{
    ViewBag.Title = "_index";
}

<style>
    .dataTable tbody td:nth-child(2) {
        padding-right: 20px;
    }
</style>

<button type="button" title="Add New" data-url="/PF/EmployeeInfoPF/Create" onclick="GoTo(this)" id="" class=" sym-btn-add ">&nbsp;New</button>
<button type="button" title="Add New" data-url="/PF/EmployeeInfoPF/Create" onclick="GoTo(this)" id="" class=" sym-btn-save ">&nbsp;Sync</button>
<button type="button" title="Add New" data-url="/PF/EmployeeInfoPF/Import" onclick="GoTo(this)" id="" class=" sym-btn-Excel-Export ">&nbsp;Export/Emport</button>
<div class="thinbox">
    <div class="th_thinbox">
        <p>PF Employee List</p>
    </div>

    <br />
    <table id="myDataTable" class="display">
        <thead>
            <tr>
                <th class="center">
                    <input type="checkbox" class="chkAll" />Select All
                </th>
             
                <th>Code</th>
                <th>Name</th>
                <th>Department</th>             
                <th>DateOfBirth</th>
                <th>JoinDate</th>
            </tr>
            <tr>   
                <th class="center">Actions</th>    
                <th>Code</th>
                <th>Name</th>
                <th>Department</th>               
                <th>DateOfBirth</th>
                <th>JoinDate</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <br />
</div>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        var oTable = $('#myDataTable').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/PF/EmployeeInfoPF/_index",
            "bProcessing": true,
            "aLengthMenu": tablelength(),
            "bJqueryUI": true,
            "bAutoWidth": false,
            "aoColumns": [
               {
                   "sName": "Id",
                   "bSearchable": false,
                   "bSortable": false,
                   "sWidth": "9%",
                   "sClass": "center",
                   "fnRender": function (oObj) {
                       return ' <input onclick="CheckAll(this)" type="checkbox" data-Id="' + oObj.aData[0]
                           + '">&nbsp; <a title="Click on for Edit" style="text-decoration:none;" href=\"/PF/EmployeeInfoPF/Edit/' + oObj.aData[0] + '\"  class=" sym-btn-edit-row"></a>'
                           + '&nbsp; <a title="Click on for Send Mail"  href="/PF/EmployeeInfoPF/Delete?Id=' + oObj.aData[0] + '\" class="sym-btn-remove-row"></a>'
                          
                       ;
                   }
               },
                { "sName": "Code", "sWidth": "10%" },
                { "sName": "Name", "sWidth": "15%" },
                { "sName": "Department", "sWidth": "15%" },             
                { "sName": "DateOfBirth", "sWidth": "10%" },
                { "sName": "JoinDate", "sWidth": "10%" },
            ]
        });

        oTable.columnFilter({
            sPlaceHolder: "head:after",
            aoColumns: [
                null, // No filter for the first column
                { type: "text" },
                { type: "text" },
                { type: "text" },
                { type: "text" },
                { type: "text" },               
            ]
        });

    });
</script>

