@model SymViewModel.PF.ReservedFundVM
@using UIHelper.MVC
@{

    ViewBag.Title = "Create";
    ViewBag.Location = "Create"; 
}

@using (Html.BeginForm("CreateEdit", "ReservedFund", FormMethod.Post, new { enctype = "multipart/form-data", @Id = "frmReservedFund" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.TransactionType)
    @Html.HiddenFor(model => model.Operation)

    <div class="thinbox">
        <div class="EnumReservedFund">
            <div class="row">
                <label class="col-sm-3">
                    @Html.LabelFor(model => model.ReservedDate)
                </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.ReservedDate, new { @placeholder = "Reserved Date", @class = " customDatePicker required form-control" })
                </div>
            </div>
            <div class="row">
                <label class="col-sm-3">
                    @Html.LabelFor(model => model.ReservedValue)
                </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.ReservedValue, new { @placeholder = "Reserved Value", @class = " form-control" })
                </div>
            </div>

            @if (Model.Operation != "add")
            {
                <div class="row">
                    <label class="col-sm-3">
                        @Html.LabelFor(model => model.IsActive)
                    </label>
                    <div class="col-sm-9">
                        @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IsActive)
                    </div>
                </div> 
            }
            <div class="row">
                <label class="col-sm-3">
                    @Html.LabelFor(model => model.Remarks)
                </label>
                <div class="col-sm-9">
                    @Html.TextAreaFor(model => model.Remarks, new { @placeholder = "Remarks", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Remarks)
                </div>
            </div>
            <div class="row">
                @if (Model.TransactionType == "Other")
                {
                    <label class="col-sm-3">
                        <button type="button" title="Save Data" onclick="pageSubmit('frmReservedFund');" class="sym-btn-save">&nbsp;Save</button>
                    </label>
                }

                <label class="col-sm-4">
                    <button type="button" title="Cancel Data" class=" btncancel sym-btn-cancel">&nbsp;Cancel</button>
                </label>
            </div>
        </div>
    </div>
}
<script>
    $(function () {
        InitDropDowns();
        InitDateTimePickers();
        valiDation("frmReservedFund");
    });

</script>
