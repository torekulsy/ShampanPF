                                        //+ '&nbsp; <a title="Click on for Post"   data-url="/@ViewBag.TransType/ProfitDistributionNew/Post"   onclick=btnPostNew(this);   data-Id="' + oObj.aData[0] + '\" class="sym-btn-post-row"></a>'
