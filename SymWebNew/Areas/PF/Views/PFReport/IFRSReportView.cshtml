<script>
    $(function () {

        InitDropdownsCommon();
    });

    function reportData(sender) {
        debugger;
        var MonthTo = $("#MonthTo").val();

        if (MonthTo == "") {
            ShowResult("Fail", "Please select the Period To");
            return true;
        }

        $("#frmFR").submit();
    }

</script>



